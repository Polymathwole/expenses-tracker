@model SignupViewModel
@{
    ViewBag.Title = "Expenses Tracker | Signup";
}

@section ExtraStyle {
    <link href="~/styles/signupstyle.css" rel="stylesheet" />
}

<div class="container-fluid" id="page-container">
    <div id="signup-form">
        <form asp-action="Signup" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="FirstName">FirstName</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="FirstName" />
                    </div>
                </div>
                <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="LastName">LastName</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="LastName" />
                    </div>
                </div>
                <div><span asp-validation-for="LastName" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="UserName">UserName</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="UserName" />
                    </div>
                </div>
                <div><span asp-validation-for="UserName" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="Password">Password</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="Password" type="password" />
                    </div>
                </div>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="ConfirmPassword">Confirm password</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="ConfirmPassword" type="password" />
                    </div>
                </div>
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="Email">Email</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="Email" type="email" />
                    </div>
                </div>
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="PhoneNumber">PhoneNumber</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="Sex">Sex</label>
                    </div>
                    <div class="col-10">
                        <select asp-for="Sex" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Non Binary">Non Binary</option>
                        </select>
                    </div>
                </div>
                <div><span asp-validation-for="Sex" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="DoB">Date of Birth</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" asp-for="DoB" type="date" min="1960-01-01" max="2008-12-31" />
                    </div>
                </div>
                <div><span asp-validation-for="DoB" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-3">
                        <input type="submit" class="btn btn-success" value="SIGN UP" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>